{% extends 'base.html.twig' %}
{% block titlesm %}{{ 'title.account.view'|trans }}{% endblock titlesm %}

{% block body %}
<div id="user_account" class="container">
    <div class="row">
        <div class="col">
            <h2>{{ 'view_account.user_info'|trans }}</h2>
            <ul>
                <li class="user_info_li">
                    <label>{{ 'view_account.label.language'|trans }}</label>
                    <div class="btn-group" role="group" aria-label="...">
                        <button class="btn btn-light btn-lg">
                            <a href="#" data-locale="{{ locales|languages['default'] }}">
                                {{ locales|languages['default']|trans }}
                            </a>
                        </button>
                        {% for locale in locales|languages['other'] %}
                        <button class="btn btn-primary btn-lg">
                            <a href="{{ path('account_locale', {'locale': locale}) }}" data-locale="{{ locale }}" style="color: #fff;">
                                {{ locale|trans }}
                            </a>
                        </button>
                        {% endfor %}
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h2>{{ 'view_account.profile_edit'|trans }}</h2>
            <ul>
                <li class="user_info_li">
                    {{ form_start(form) }}
                    <div class="form-group row">
                        <label for="command" class="col-sm-2 col-form-label"> {{ form_label( form.username) }}</label>
                        <div class="col-sm-10">
                            {{ form_widget( form.username, { 'attr': {'class': 'form-control'} }) }} {{ form_errors( form.username, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="command" class="col-sm-2 col-form-label"> {{ form_label( form.email) }}</label>
                        <div class="col-sm-10">
                            {{ form_widget( form.email, { 'attr': {'class': 'form-control'} }) }} {{ form_errors( form.email, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <button type="submit" id="save-account-details" class="btn-myd mt-4">{{ 'view_connector.btn.save'|trans }}</button>
                    {{ form_end(form) }}
                </li>
            </ul>
        </div>
    </div>
    <div class="row password-reset">
        <div class="col form-group">
            <h2>{{'password_reset.title'|trans}}</h2>
            <a href="{{ path('my_account_reset_password')}}">
                <button type="button" class="btn btn-primary">{{'password_reset.button'|trans}}</button>
            </a>
        </div>
    </div>
</div>
{% endblock %}