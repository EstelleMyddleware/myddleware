{% extends 'baseone.html.twig' %}

{% block title %}{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('install') }}
{% endblock %}
{% block body %}
<div id="myd_top"></div>
<div class="container">


    <div class="row">
        <div class="col">


           <p><span id="logo"></span></p>
            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading"> Install Step 2 : setting up your Myddleware database</div>
                        <div class="panel-body">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Database information
                                </div>
                                <div class="panel-body">
                                    {{ form(form) }}
                                    {% if submitted %}
                                    <a href="{{ path('database_connect') }}" id="test">
                                        <button type="button" class="btn btn-primary btn-block">
                                            {{'install.next'|trans}} 
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-right" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
                                            </svg>
                                        </button>
                                    </a>
                                    {% else %}
                                        <button type="button" class="btn btn-default btn-block" disabled> {{'install.next'|trans}} </button>
                                    {% endif %} 
                                    <div class="panel-footer">
                                        <a href="{{path('install_requirements')}}">
                                            <button type="button" class="btn btn-default btn-block">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                                                    </svg>
                                                    Go back to requirements check
                                            </button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<footer>
    {% include 'footer.html.twig' %}
</footer>

 {% block javascripts %}
     {{ encore_entry_script_tags('install') }}
 {% endblock %}
{% endblock %}
