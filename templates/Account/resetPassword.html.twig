{% extends 'base.html.twig'%}

{% block title %}{{'password_reset.title'|trans}}{% endblock %}

{% block body %}
    <div class="container-fluid" id="reset-password-container">
        <div class="row">
            <div class="col-md-12" id="reset-password-col">
            <a href="{{path('my_account')}}">
                <button type="button" class="btn btn-default btn-block">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                    </svg>
                    {{'password_reset.back_to_account'|trans}}
                </button>
            </a>
                <h2>{{'password_reset.title'|trans}}</h2>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}