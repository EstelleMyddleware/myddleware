{% extends 'baseone.html.twig' %}
{% block stylesheets %}

    {{ encore_entry_link_tags('install') }}
{% endblock %}
{% block body %}
<div id="myd_top"></div>
<div class="container">
    <div class="row">
        <div class="col">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <p><span id="logo"></span></p>
            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">Install step 5 : create your Myddleware account</div>
                        <div class="panel-body">
                            <div class="panel panel-success register-container">
                                <div class="panel-heading">
                                    Register 
                                </div>
                                <div class="panel-body">
                                    {{ form_start(registrationForm) }}
                                        {{ form_row(registrationForm.username) }}
                                        {{ form_row(registrationForm.email) }}
                                        {{ form_row(registrationForm.plainPassword, {
                                            label: 'Password'
                                            }) 
                                        }}
                                        {{ form_row(registrationForm.agreeTerms) }}

                                        <button type="submit" class="btn btn-success">Register</button>
                                    {{ form_end(registrationForm) }}
                                    <div class="panel-footer">
                                        <a href="{{path('database_fixtures_load')}}">
                                            <button type="button" class="btn btn-default btn-block">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                                                    </svg>
                                                    Go back to database setup
                                            </button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<footer>
{% include 'footer.html.twig' %}
</footer>
 {% block javascripts %}
     {{ encore_entry_script_tags('install') }}
 {% endblock %}
{% endblock %}
