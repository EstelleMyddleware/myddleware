<div class="link-help-view">
	<a href="#help-content-mapping">
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
			<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
			<path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
			</svg>
			{{'rule.help'|trans}}
		</a>
</div>

<div id="fd-title" class="left">
	<p>{{'view_rule.mapping.module_target'|trans}} : {{ rule.getModuleTarget }}<p>
	<p>{{'view_rule.mapping.module_source'|trans}} : {{ rule.getModuleSource }}<p>
</div>
<div class="clr"></div>
<div class="mapping-container">
			{% if fields %}
				{% for c, f in fields %}
					<div class="card">
						<div class="card-body">
							<h4  class="card-title">{{ f.getTarget }}</h4>
							<p class="card-text">
									<p class="mapped-fields card-text">{{ f.getSource }} </p>
									{% if f.getFormula %}
										<p class="mapped-formula card-text">{{'view_rule.mapping.formula'|trans}} : {{ f.getFormula }} </p>
									{% else %}
										<p class="mapped-formula card-text">{{'view_rule.mapping.formula_empty'|trans}}</p>
									{% endif %}
							</p> 
						</div> 
					</div>
				{% endfor %}
					<div class="clr"></div>

			{% else %}
				<div>{{'view_rule.mapping.empty'|trans}}</div>
			{% endif %}
</div>
<div id="help-content-mapping" class="help-content">
	<h2>{{'help.title'|trans}} 
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
		<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
		<path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
		</svg>
	</h2>
	<p>{{'help.viewrule.mapping'|trans|raw}}</p>
</div>
